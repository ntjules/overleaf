
<div class="col-lg-6 col-md-6 col-sm-12 offset-2">


  <%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <h4><i class="icon fa fa-ban"></i><%= pluralize(task.errors.count, "error") %> prohibited this task from being
      saved:
    </h4>
    <ul>
      <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


  <div class="form-group row">
      <label class="col-sm-2 col-form-label"> <%= t('view.title') %></label>
      <div class="col-sm-10">
        <%= form.text_field :title, placeholder:"title" , class:"form-control"%>
      </div>
    </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"> <%= t('view.content') %></label>
    <div class="col-sm-10">
      <%= form.text_area :content, placeholder:"content" , class:"form-control"%>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"> <%= t('view.deadline') %></label>
    <div class="col-sm-10">
      <%= form.date_field :deadline , class:"form-control"%>
    </div>
  </div>




  <div class="form-group row">
    <%= form.label :priority ,class:"col-sm-2 col-form-label"%>
    <!-- <label for="inputPassword" class="col-sm-2 col-form-label">Password</label> -->
    <div class="col-sm-10">
      <!-- <input type="password" class="form-control" id="inputPassword" placeholder="Password"> -->
      <%= form.select(:priority, Task.priorities.keys, {:include_blank => "Choose priority"}, {class: "form-control"}) %>

    </div>
  </div>

<% Label.all.each do |label| %>
<span class="badge badge-pill badge-warning"><%= form.check_box :tag_list, {multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false}, label[:label] %>
<%= label.label %></span>

<% end %>
  <div class="text-center">
    <%= form.submit :class => 'btn btn-primary' %>
  </div>

  <% end %>
</div>