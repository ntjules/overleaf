<div class="col-md-7 offset-2 mb-5">
    <div class="card ">
        <h5 class="card-header text-center">List os all users</h5>
        <ul class="list-group">
            <% @users.each do |user| %>
            <li class="list-group-item   align-items-center">
                <label><%= user.first_name %> <%= user.last_name %></label> <label
                    class="pl-3"><%= user.email %></label>
                            <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } ,  class: "btn btn-primary badge-pill float-right ml-2" %>

              
                        <%= link_to "Edit", edit_admin_user_path(user) , form: {style: 'display:inline-block;'}, class: "btn btn-info badge-pill float-right" %>

               
            </li>
            <% end %>



    </div>
</div>
<div>
    <%= link_to "New user", new_admin_user_path, class:"btn btn-outline-primary my-2 my-sm-0 ml-5"  %>
</div>